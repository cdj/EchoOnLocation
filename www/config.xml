<?xml version='1.0' encoding='utf-8'?>
<widget id="com.okcarl.echoonlocation" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EchoOnLocation</name>
    <description>
        An app for sending and receiving messages at a specific geolocation.
    </description>
    <author email="carl@jamilkowski.com" href="http://www.okcarl.com">
        OkCarl
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <icon src="icons/app.png" width="128" height="128"/>
    <icon src="icons/android/ldpi.png"  gap:platform="android" gap:density="ldpi"  />
    <icon src="icons/android/mdpi.png"  gap:platform="android" gap:density="mdpi"  />
    <icon src="icons/android/hdpi.png"  gap:platform="android" gap:density="hdpi"  />
    <icon src="icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
</widget>

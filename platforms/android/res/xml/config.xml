<?xml version='1.0' encoding='utf-8'?>
<widget id="com.okcarl.echoonlocation" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hello Cordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <preference name="loglevel" value="DEBUG" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="Compass">
        <param name="android-package" value="org.apache.cordova.deviceorientation.CompassListener" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
    </feature>
    <name>EchoOnLocation</name>
    <description>
        An app for sending and receiving messages at a specific geolocation.
    </description>
    <author email="carl@jamilkowski.com" href="http://www.okcarl.com">
        OkCarl
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <icon height="128" src="icons/app.png" width="128" />
    <icon gap:density="ldpi" gap:platform="android" src="icons/android/ldpi.png" />
    <icon gap:density="mdpi" gap:platform="android" src="icons/android/mdpi.png" />
    <icon gap:density="hdpi" gap:platform="android" src="icons/android/hdpi.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="icons/android/xhdpi.png" />
</widget>
